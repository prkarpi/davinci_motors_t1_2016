<p id="notice"><%= notice %></p>

<h1>Listing Cars</h1>

<table>
  <thead>
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @car.each do |car| %>
    <tr>
      <td><%= car.make %></td>
      <td><%= car.model %></td>
      <td><%= car.year %></td>
      <td><%= car.price %></td>
      <td><%= link_to 'Show a Car', car %></td>
      <td><%= link_to 'Edit a Car', edit_car_path(car) %></td>
      <td><%= link_to 'Destroy a Car', car, method: :delete, data: { confirm: 'Are you sure?' }, id: dom_id(car, 'destroy') %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

